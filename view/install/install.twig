<div class="container my-5">
    <h1>{{ heading_title}}</h1>
    {% if error %}
    <div class="alert alert-danger">
        {{ error_text }}
    </div>
    {% endif %}
    <form action="/install/index.php" method="post">
        <h4 class="my-3">{{ text_database }}</h4>
        <div class="row align-items-center">
            <div class="col-md-2">
                <b class="fs-5">{{ entry_server }}</b>
            </div>
            <div class="col-md-10">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control {{ error ? 'is-invalid' : '' }}" id="input-server" name="server" placeholder="{{ entry_server }}" required value="{{ server }}">
                    <label for="input-server">{{ entry_server }}</label>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-2">
                <b class="fs-5">{{ entry_name }}</b>
            </div>
            <div class="col-md-10">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control {{ error ? 'is-invalid' : '' }}" id="input-name" name="name" placeholder="{{ entry_name }}" required value="{{ name }}">
                    <label for="input-name">{{ entry_name }}</label>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-2">
                <b class="fs-5">{{ entry_username }}</b>
            </div>
            <div class="col-md-10">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control {{ error ? 'is-invalid' : '' }}" id="input-username" name="username" placeholder="{{ entry_username }}" required value="{{ username }}">
                    <label for="input-username">{{ entry_username }}</label>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-2">
                <b class="fs-5">{{ entry_password }}</b>
            </div>
            <div class="col-md-10">
                <div class="form-floating mb-3">
                    <input type="password" class="form-control {{ error ? 'is-invalid' : '' }}" id="input-password" name="password" placeholder="{{ entry_password }}" required value="{{ password }}">
                    <label for="input-password">{{ entry_password }}</label>
                </div>
            </div>
        </div>
        <button class="btn btn-success btn-lg mt-5">{{ button_install }}</button>
    </form>
</div>