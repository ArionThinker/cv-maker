<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ heading_title }}</title>
    {% for style in styles %}
        <link href="{{ style }}" rel="stylesheet" type="text/css">
    {% endfor %}
    {% for script in scripts %}
        <script src="{{ script }}"></script>
    {% endfor %}
  </head>
  <body>
    <header>
    <nav class="navbar navbar-expand-lg bg-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">CV Creator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {% for item in menu %}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ item.href }}">{{ item.name }}</a>
                        </li>
                    {% endfor %}
                    
                </ul>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-translate"></i> {{ text_language }}
                        </a>
                        <ul class="dropdown-menu">
                            {% for language in languages %}
                                <li><a class="dropdown-item" href="/language.php?current={{ current }}&code={{ language.code }}">{{ language.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
            </ul>
        </div>
        </nav>
    </header>
    <main class="bg-light d-flex" style="min-height:100vh">

    
